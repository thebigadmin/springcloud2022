<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.bjpowernode.springcloud.mapper.PaymentMapper">

    <resultMap id="BaseResultMap" type="com.bjpowernode.springcloud.entities.Payment">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="serial" property="serial" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="createPayment" >
        INSERT INTO payment(ID,SERIAL) VALUES(#{id},#{serial});
    </insert>

    <select id="getPaymentById" resultMap="BaseResultMap">
        select * from payment where id = #{id}
    </select>

</mapper>